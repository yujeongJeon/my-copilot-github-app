{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": ".",
        "strict": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "$/*": ["./*"]
        }
    },
    "include": ["*.ts"],
    "exclude": ["node_modules", "dist"]
}
